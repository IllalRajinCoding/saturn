---
import "../styles/global.css";
import WavyBackground from "../components/WavyBackground.astro";
export interface Props {
  title?: string;
}

const { title = "LoxyAI" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-[#FFC09F] text-black dark:bg-[#ADC1E3] dark:text-white transition-colors duration-500"
  >
    <div class="fixed top-0 -z-10">
      <WavyBackground />
    </div>
    <slot />
  </body>
</html>
